<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="@dimen/activity_padding"
android:orientation="vertical"
android:gravity="center"
tools:context="cz.vaek.unit.MainActivity">
<TextView
    android:id="@+id/dice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="32sp"
    android:background="@drawable/rectangle"
    />
<Button
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/button_margin"
    android:text="@string/cube_throw"
    android:onClick="cubeThrow"/>
<Button
    android:id="@+id/switchToDots"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/button_margin"
    android:text="@string/prepni_na_tecky"
    android:onClick="changeToPoints"
    />
<Button
    android:id="@+id/switchToScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/button_margin"
    android:text="@string/prepni_na_fancy_vec"
    android:onClick="changeToScreen"/>
</LinearLayout>
